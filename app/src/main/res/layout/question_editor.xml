<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/question_editor_layout">

    question_editor
    <TextView android:id="@+id/editorHeader" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/questioncontent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp" />

    <EditText android:id="@+id/editor_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editorHeader"
        android:ems="30"
        android:paddingLeft="10dp"/>




    <Button android:id="@+id/editor_save_question" style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="21dp" android:layout_marginTop="13dp"
        android:text="@string/savecat" />
</RelativeLayout>