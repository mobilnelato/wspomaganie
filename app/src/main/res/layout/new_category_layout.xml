<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/textView3" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newcategory"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"
        android:layout_marginTop="90dp"
        android:textColor="#000000"
        />
    <!--android:layout_below="@+id/textView2" -->

    <EditText android:id="@+id/newcattitle" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView3"
        android:ems="30"
        android:paddingLeft="10dp"
        android:hint="Category name"
        android:inputType="text">
        <requestFocus />
    </EditText>

    <Button android:id="@+id/savecat" style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true" android:layout_below="@+id/newcattitle"
        android:layout_marginRight="21dp" android:layout_marginTop="13dp"
        android:text="@string/savecat" />
</RelativeLayout>